<h1 class="mt-4">Edit Group: <%= group.cn %>
</h1>

<form action="/groups/<%= group.cn %>/edit" method="POST">
    <div class="form-group">
        <label for="cn">Common Name (cn)</label>
        <input type="text" class="form-control" name="cn" value="<%= group.cn %>" readonly>
    </div>

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" value="<%= group.name %>">
    </div>

    <div class="form-group">
        <label for="members">Members (DNs)</label>
        <textarea class="form-control" name="member"
            rows="5"><%= group.member ? group.member.join('\n') : '' %></textarea>
        <small class="form-text text-muted">One DN per line</small>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a href="/groups" class="btn btn-secondary">Cancel</a>
</form>